#include "sensors.h"
#include <stdints.h>

/* These values are also used in main function with extern keyword */
float temperature;
float humidity;
float co2;
float i2c_sensor_read(uint8_t device_address, enum sensor_t sensor_type);
void	measure_temperature(void)
{
	// Assume a float temperature value is obtained from raw values
	temperature = i2c_sensor_read(TEMPERATURE_SENSOR);
}

void	measure_humidity(void)
{
	// Assume a float humidity value is obtained from raw values
	humidity = i2c_sensor_read(HUMIDITY_SENSOR);
}

void	measure_co2(void)
{
	// Assume a float co2 value is obtained from raw values
	co2 = i2c_sensor_read(CO2_SENSOR);
}
